<div class="gallery">
  <% @photos.each do |photo| %>
    <%= link_to url_for(photo[:photo].image),
      class: ['js-gallery-link', 'gallery__link', "gallery__link--#{photo[:photo].thumbnail_size}"],
      data: { lightbox: 'photos', title: photo[:photo].description } do %>
      <%= image_tag '/images/placeholder.png', class: 'gallery__image', style: "min-width: 100px; min-height: 100px",
        data: {
          'lazy-load': '',
          'lazy-load-src': url_for(photo[:thumbnail]),
          'description': photo[:photo].description
        } %>
    <% end %>
  <% end %>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.10.0/js/lightbox-plus-jquery.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.10.0/css/lightbox.min.css" />
<script>
  lightbox.option({
    'resizeDuration': 200,
    'wrapAround': true,
    'disableScrolling': true
  })
</script>
